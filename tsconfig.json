{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    // "isolatedMod, "vite-env.d.ts"ule, "examples/main.tsx"s": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "examples/App.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}